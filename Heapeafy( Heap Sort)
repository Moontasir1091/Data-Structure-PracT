#include <iostream>
using namespace std;

void Heapify(int A[], int n, int i) {
    int largest = i;
    int l = 2 * i;      // left child
    int r = 2 * i + 1;  // right child

    if (l <= n && A[l] > A[largest]) {
        largest = l;
    }

    if (r <= n && A[r] > A[largest]) {
        largest = r;
    }

    if (largest != i) {
        swap(A[i], A[largest]);
        Heapify(A, n, largest);
    }
}

void BuildHeap(int A[], int n) {
    for (int i = n / 2; i >= 1; i--) {
        Heapify(A, n, i);
    }
}

void PrintHeap(int A[], int n) {
    for (int i = 1; i <= n; i++) {
        cout << A[i] << " ";
    }
    cout << endl;
}

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    int A[n + 1]; // 1-based indexing

    cout << "Enter the elements:\n";
    for (int i = 1; i <= n; i++) {
        cin >> A[i];
    }

    BuildHeap(A, n);

    cout << "Max Heap:\n";
    PrintHeap(A, n);

    return 0;
}
